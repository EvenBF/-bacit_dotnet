@using bacit_dotnet.MVC.Models.Users
@model UserViewModel
<h3>Rediger registrerte brukere</h3>
@if(Model.Email!=null)
{
<form  asp-action="save" asp-controller="users" method="post">
    <ul>
        <li>
            <label for="Title">Navn</label>
            <input type="text" name="Name" />
        </li>
        <li>
            <label for="Name">Passord</label>
            <input type="password" name="Password" />
        </li>
        <li>
            <label for="Team">Email</label>
            <input type="email" name="Email" />
        </li>
        <li>
            <label for="TimeStamp">Role</label>
            <input type="Text" name="Role" />
        </li>
        <li>
            <input type="submit" value="Lagre" />
        </li>
    </ul>
</form> 
}
<table>
    <tr>
        <td>Name</td>
        <td>Email</td>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="delete" asp-controller="users" method="post">
                    <input type="hidden" name="Email" value="@user.Email" />
                    <input type="submit" value="Slett" />
                </form>
            </td>
            <td>
                <form asp-action="index" asp-controller="users" method="get">
                    <input type="hidden" name="Email" value="@user.Email" />
                    <input type="submit" value="Endre" />
                </form>
            </td>
        </tr>
    }
</table>